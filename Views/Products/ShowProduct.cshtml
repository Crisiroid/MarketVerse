@model MarketVerse.Models.ProductWithContent
@{
    ViewBag.Title = "ShowProduct";
}

<main style="margin: 20px;">
    <div class="card">
        <div class="card-header">
            Product Information
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.product.Name</h5>
            <p class="card-text">@Model.product.Description</p>
            <p class="card-text">@Model.product.Purchuses people have bought this product so far!</p>
            <a href="#" class="btn btn-success">Buy Now!</a>
        </div>
    </div>

    <br />

    <div class="card">
        <div class="card-header bg-info">
            Additional Details
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.content.Title</h5>
            <p class="card-text">@Html.Raw(Model.content.Text)</p>
        </div>
    </div>

</main>

