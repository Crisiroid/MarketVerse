@{
    bool AdminLoggedin = Session["Admin"] != null;
    List<MarketVerse.Models.Category> categories = MarketVerse.Models.Category.ShowAllCategories();
    List<MarketVerse.Models.SubCategory> subcategories = MarketVerse.Models.SubCategory.ShowAllSubCategories();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    <style>
        /* Custom CSS for the navigation bar */
        .navbar {
            background-color: #343a40; /* Dark background color */
        }

        .navbar-brand {
            color: #ffffff; /* White text color for the brand */
        }

        .navbar-nav .nav-link {
            color: #ffffff; /* White text color for links */
        }

            .navbar-nav .nav-link:hover {
                color: #f8f9fa; /* Lighter text color on hover */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            @Html.ActionLink("MarketVerse", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("SinUp", "Register", "Users", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (AdminLoggedin)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Admin Panel", "Panel", "AdminPanel", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    @foreach (var item in categories)
                    {
                        <li>
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @item.Name
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    @foreach (var subitem in subcategories)
                                    {
                                        if (subitem.Code == item.id)
                                        {
                                            <a class="dropdown-item" href="#">@subitem.Name</a>
                                            <div class="dropdown-divider"></div>
                                        }

                                    }
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <!-- Add the new button here -->
            <div class="ml-auto">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Login
                    </button>
                    <div class="dropdown-menu" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="@Url.Action("Register", "Users", new { area = "" })">Register</a>
                        <a class="dropdown-item" href="@Url.Action("Login", "Users", new { area = "" })">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-4">

        @if (ViewBag.pm != null)
        {
            <div class="alert alert-danger alert-dismissible">@ViewBag.pm</div>
        }
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
