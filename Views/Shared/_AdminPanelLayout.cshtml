<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <!-- Brand/logo -->
            <a class="navbar-brand" href="#">Your Logo</a>

            <!-- Centered Search Input -->
            <form class="form-inline mx-auto">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>

            <!-- Picture (click to open menu) -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="menuDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="your-image.jpg" alt="Profile Image" width="40" height="40">
                </a>
                <div class="dropdown-menu" aria-labelledby="menuDropdown">
                    <a class="dropdown-item" href="#">Menu Item 1</a>
                    <a class="dropdown-item" href="#">Menu Item 2</a>
                    <a class="dropdown-item" href="#">Menu Item 3</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col-3" style="margin: 20px;">
            <div class="card">
                <div class="card-header">
                    Quick Access
                </div>
                <div class="card-body">
                    <ul>
                        <li><a href="/AdminPanel/Users">Manage Users</a></li>
                        <li><a href="/Products"> Manage Products</a></li>
                        <li><a href="/AdminPanel/Orders"> Manage Orders</a></li>
                        <li><a href="/AdminPanel/Statics"> Manage Statics</a></li>
                        <li><a href="/Categories"> Manage Categories</a></li>
                        <li><a href="/Subcategories"> Manage Subcategories</a></li>
                        <li><a href="/AdminPanel/SiteSettings"> Site Settings</a></li>
                        <li><a href="/AdminPanel/ViewSite">View Site</a></li>
                        <li><a href="/AdminPanel/Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
