<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #5C8374;
            text-decoration-color: #93B1A6;
            color: #ffffff;
        }
        .navbar {
            background-color: #040D12 !important;
        }
        .card {
            background-color: #183D3D;
        }
            .card ul {
                list-style: none; /* Remove bullets */
                padding-left: 0; /* Remove default list padding */
            }

            .card li {
                padding: 10px 0;
            }

                .card li a {
                    text-decoration: none;
                    color: #93B1A6; /* Text color */
                    background-color: #183D3D; /* Background color */
                    padding: 10px 20px;
                    display: block;
                    transition: background-color 0.3s; /* Add a smooth hover effect */
                    font-family: Arial, sans-serif; /* Use a common sans-serif font */
                    font-size: 16px; /* Increase the font size */
                }

                    .card li a:hover {
                        background-color: #27005D; /* Hover background color */
                        color: #fff; /* Text color on hover */
                    }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <!-- Brand/logo -->
            <a class="navbar-brand" href="#">Your Logo</a>

            <!-- Centered Search Input -->
            <form class="form-inline mx-auto">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>

            <!-- Picture (click to open menu) -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="menuDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" alt="Profile Image" width="20" height="40">
                </a>
                <div class="dropdown-menu" aria-labelledby="menuDropdown">
                    <a class="dropdown-item" href="#">Visit Site</a>
                    <a class="dropdown-item" href="#">Change Details</a>
                    <a class="dropdown-item" href="/AdminPanel/Logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <ul>
                        <li><a href="/AdminPanel/Users">Manage Users</a></li>
                        <li><a href="/Products"> Manage Products</a></li>
                        <li><a href="/AdminPanel/Orders"> Manage Orders</a></li>
                        <li><a href="/AdminPanel/Statics"> Manage Statics</a></li>
                        <li><a href="/Categories"> Manage Categories</a></li>
                        <li><a href="/Subcategories"> Manage Subcategories</a></li>
                        <li><a href="/AdminPanel/SiteSettings"> Site Settings</a></li>
                        <li><a href="/AdminPanel/ViewSite">View Site</a></li>
                        <li><a href="/AdminPanel/Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
