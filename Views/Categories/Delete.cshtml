@model MarketVerse.Models.Category

@{
    ViewBag.Title = "Delete a Category";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";

}

<main>
    @if (ViewBag.pm != null)
    {
        <div class="alert alert-danger alert-dismissible">@ViewBag.pm</div>
    }

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SubcategoryCount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SubcategoryCount)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-success" /> |
                <a class="btn btn-danger" href="/Categories/Index"> Back to list </a>

            </div>
        }
    </div>
</main>
