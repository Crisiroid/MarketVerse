@model IEnumerable<MarketVerse.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

@section Styles{

    .latest-products-wrapper {
    max-width: 100%; /* Adjust the maximum width as needed */
    overflow: hidden; /* Hide any content exceeding the maximum width */
    }

    .latest-products-container {
    display: flex;
    overflow-x: auto; /* Enable horizontal scrolling */
    white-space: nowrap; /* Prevent cards from wrapping to the next line */
    padding: 10px; /* Add some spacing around the container */
    }

    .latest-products-container .card {
    flex: 0 0 auto; /* Prevent cards from growing to fill the container */
    margin-right: 10px; /* Add spacing between cards */
    }
}

<main class="rounded shadow-sm">
    <div class="slideshow rounded" style="padding: 10px; background-color: #DDE9F0; ">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://kalatik.com/img/dmt/dmtblog/content/large-285.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://kalatik.com/img/dmt/dmtblog/content/large-625.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://club.snapp.ir/wp-content/uploads/2023/07/20230703-jagozashtan-H-1.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next text-white link-warning" href="#carouselExampleIndicators" style="color: red!important;" role="button" data-slide="next">
                <span class="carousel-control-next-icon" style="color: red!important;" aria-hidden="true"></span>
            </a>
        </div>
    </div>

    <br />

    <h2>Latest products</h2>
    <div class="latest-products-wrapper">

        <div class="latest-products-container">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>
                        <p class="card-text">Price: @item.Price</p>
                        <a href="/Products/ShowProduct/@item.id" class="card-link">View Details</a>
                    </div>
                </div>
            }
        </div>
    </div>

</main>