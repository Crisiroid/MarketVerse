@model MarketVerse.Models.PFMP
@{
    ViewBag.Title = "MarketVerse";
    List<MarketVerse.Models.Product> PBV = Model.PBV;
    List<MarketVerse.Models.Product> P = Model.Products;
    List<MarketVerse.Models.Product> PBP = Model.PBP;
}

@section Styles{

    .latest-products-wrapper {
    max-width: 100%; /* Adjust the maximum width as needed */
    overflow: hidden; /* Hide any content exceeding the maximum width */
    }

    .latest-products-container {
    display: flex;
    overflow-x: auto; /* Enable horizontal scrolling */
    white-space: nowrap; /* Prevent cards from wrapping to the next line */
    padding: 10px; /* Add some spacing around the container */
    }

    .latest-products-container .card {
    flex: 0 0 auto; /* Prevent cards from growing to fill the container */
    margin-right: 10px; /* Add spacing between cards */
    }

    #infinite-carousel {
    width: 80%; /* Adjust the width as needed */
    margin: 0 auto; /* Center the carousel */
    }

    .carousel-inner {
    text-align: center; /* Center images horizontally */
    }

    .carousel-item img {
    max-width: 100%;
    height: auto; /* Responsive images */
    }

    /* Custom CSS for the carousel controls */
    .carousel-controls {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    z-index: 1;
    }

    .carousel-controls a {
    background-color: white;
    border-radius: 50%;
    width: 40px; /* Adjust the size as needed */
    height: 40px; /* Adjust the size as needed */
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    font-size: 20px; /* Adjust the size of the icon */
    color: black;
    transition: background-color 0.3s, color 0.3s;
    }

    .carousel-controls a:hover {
    background-color: #333; /* Change background color on hover */
    color: white; /* Change text color on hover */
    }

    .control-icon {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    }
    .carousel-container {
    max-height: 300px; /* Limit the height of the carousel */
    background-color: #f4f4f4; /* Mild background color */
    overflow: hidden; /* Hide overflowing images */
    width: 100%; /* Fill the width of the screen */
    }

    .carousel-inner {
    max-height: 300px; /* Limit the height of the images */
    text-align: center; /* Center images horizontally */
    width: 100%; /* Fill the width of the screen */
    }

    .carousel-item img {
    max-width: 100%;
    max-height: 300px; /* Limit the image height */
    width: 100%; /* Fill the width of the screen */
    width: auto;
    height: auto;
    margin: 0 auto;
    display: block; /* Center the images vertically */
    }
}

<main>
    <div class="carousel-container container-fluid">
        <div id="infinite-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://imah.org.hk/wp-content/uploads/2016/05/sunrise-beach-clipart-wallpaper-1-1000x300.jpg" alt="Image 1">
                </div>
                <div class="carousel-item">
                    <img src="https://www.southdevonaonb.org.uk/wp-content/uploads/2020/01/15_Challaborough_1000x300px-1000x300.jpg" alt="Image 2">
                </div>
                <div class="carousel-item">
                    <img src="https://marmotamaps.com/en/blog/wp-content/uploads/9-hoechsten-berge-thumbnail-1000x300-1.jpg" alt="Image 3">
                </div>
            </div>
            <div class="carousel-controls">
                <a class="carousel-control-prev" href="#infinite-carousel" role="button" data-slide="prev">
                    <div class="control-icon">
                        <i class="fas fa-chevron-left"></i>
                    </div>
                </a>
                <a class="carousel-control-next" href="#infinite-carousel" role="button" data-slide="next">
                    <div class="control-icon">
                        <i class="fas fa-chevron-right"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <br />
    <div class="P">
        <h2>Latest products</h2>
        <div class="latest-products-wrapper">

            <div class="latest-products-container">
                @foreach (var item in P)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>
                            <p class="card-text">Price: @item.Price</p>
                            <a href="/Products/ShowProduct/@item.id" class="card-link">View Details</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="PBV">
        <h2>Most Viewed Products</h2>
        <div class="latest-products-wrapper">

            <div class="latest-products-container">
                @foreach (var item in PBV)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>
                            <p class="card-text">Price: @item.Price</p>
                            <a href="/Products/ShowProduct/@item.id" class="card-link">View Details</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="PBP">
        <h2>Most Bought Products</h2>
        <div class="latest-products-wrapper">

            <div class="latest-products-container">
                @foreach (var item in PBP)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>
                            <p class="card-text">Price: @item.Price</p>
                            <a href="/Products/ShowProduct/@item.id" class="card-link">View Details</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</main>